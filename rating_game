running = True
responses = 0

while running:
    # name
    good_bad = "unknown"
    # rating
    rate = "unknown"
    rated = False
    rate_attempt = 0
    rating = 0
    rating_num = 0
    # restart
    again = ""
    # feedback
    feedback = ""
    feedback_list = []
    # special coniditions
    conditions = 0
    total_conditions = 0
    cond_list = []
    go_on = "blank"
    chose_number = False
    go_on2 = "blank"

# separation (if second or more time)
    if responses > 0:
        print("\n" * 27)

# determine name:
    print("What is your first name?")
    firstname = input("> ")
    print("What is your last name?")
    lastname = input("> ")
    firstname_cap = firstname.capitalize()
    lastname_cap = lastname.capitalize()

# determine status:
    print(f"Hello {firstname_cap} {lastname_cap}")
    print("\nHow are you doing? (good/bad)")
    while good_bad == "unknown":
        pstatus = input("> ")
        pstatus = pstatus.lower()
        if pstatus == "good":
            print("\nNice to hear that!\nHave a great day!")
            good_bad = "known"
        elif pstatus == "bad":
            print("\nSorry to hear that...\nHope your day gets better!")
            good_bad = "known"
        else:
            print("\nPlease answer with good/bad.")  # prevents error

# rate? (yes/no)
    print("\nWould you like to rate my services? (yes/no)")
    while rate.lower() != "yes" or "no":
        rate = input("> ")
        rate = rate.lower()
        if rate == "yes":
            while not rated:
                while rating_num == "":
                    if rate_attempt == 0:
                        print("\nType in your rating here (1-10)")
                    rating = input("> ")
                    try:
                        rating_num = int(rating)  # prevents error
                    except ValueError:
                        rate_attempt += 1
                        print("\nPlease enter an integer rating from 1-10:")
                rating_num = int(rating)
                if (0 < rating_num <= 5):
                    rated = True
                    print("\nWe are always looking to improve.\nType feedback here:")
                    feedback = input("> ")
                    print(
                        f"\nFeedback sent.\nThank you, {firstname_cap}, for your response.")
                    break
                    responses += 1
                elif (10 >= rating_num > 5):
                    rated = True
                    print(f"\nThank you for using our services, {firstname_cap}!")
                else:
                    print("\nPlease enter an integer rating from 1-10")
                    rate_attempt += 1
                    rating_num = ""
            break
        elif rate == "no":
            rating_num = 0  # to prevent an error in the feedback condition
            print(f"\nThank you for your time, {firstname_cap}.\nGoodbye.")
            break
        else:
            print("\nPlease answer with yes/no")

# conditions: (count)
    if rate_attempt > 3:
        conditions += 1
        cond_list.append("--You entered an invalid rating over 3 times")
    elif rate_attempt >= 1:
        conditions += 1
        cond_list.append("--You entered an invalid rating at least 1 time") #FIX THIS! for some reason it always activates
    if (0 < rating_num <= 5) and feedback == "":
        conditions += 1
        cond_list.append("--You sumbitted blank feedback")

# conditions: (print)
    print(f"\n\n\n\n\nYou met {conditions} conditions:")
    if rate_attempt > 3:
        print("\"rating should not have been that difficult...\"")
    elif rate_attempt >= 1:
        print("\"get better at following instructions\"")
    if (0 < rating_num <= 5) and feedback == "":
        print("\"thanks for that advice...\"")

# wait to continue, number for definition
    if conditions > 0:
        print("\nenter a number to see corrosponding condition definition")
    while go_on != "" or chose_number:
        print("(press enter to continue)")
        go_on = input("> ")
        try:
            go_on = int(go_on)
            try:
                if go_on > 0:
                    print(f"\n{cond_list[go_on - 1]}")
                    chose_number = True #allows loop to stop
                else:
                    print("\nInvalid number")
            except IndexError:
                if conditions > 0:
                    print("\nInvalid number")
        except ValueError:
            if go_on == "":
                break
            else:
                print("\nInvalid number")

# again?
    print("\n\n\nWould you like use our services again? (yes/no)")
    while again == "":
        again = input("> ")
        again = again.lower()
        if again == "":
            print("Please answer with yes/no")
        elif again.lower() == "no":
            running = False
        else:
            print("\nPlease answer with yes/no") #FIX THIS, IT STARTS A NEW GAME